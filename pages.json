{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/todo/list_todo",
			"style": {
				"navigationBarTitleText": "uni-app",
				"enablePullDownRefresh": true

			}
		},
		{
			"path": "pages/todo/create_todo",
			"style": {
				"navigationBarTitleText": "uni-app",
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/todo/todo_detail",
			"style": {
				"navigationBarTitleText": "uni-app",
				"enablePullDownRefresh": true,
				"navigationStyle": "custom"
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black", // Hoặc dùng biến @navTxtColor
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "@navBgColor",

		/* 1. Thay đổi màu nền window bằng biến để kích hoạt engine tốt hơn */
		"backgroundColor": "@navBgColor",

		"rpxCalcMaxDeviceWidth": 960,

		/* 2. SỬA LẠI CHÍNH TẢ DÒNG NÀY */
		"usingComponents": true

		/* 3. XÓA ĐOẠN "themeConfig" BỊ SAI ĐI */
	},
	"uniIdRouter": {}
}